---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="min-h-screen bg-base-200 flex items-center">
    <div class="card mx-auto w-full max-w-5xl  shadow-xl">
      <div class="grid  md:grid-cols-2 grid-cols-1  bg-base-100 rounded-xl">
        <div class="">
          
            <div class="hero min-h-full rounded-l-xl bg-base-200">
                <div class="hero-content py-12">
                  <div class="max-w-md">
    
                  <h1 class='text-4xl text-center font-bold '>WebCaddy</h1>                  
                    <div class="text-2xl text-center mt-12"><p class="w-48 inline-block">Private Data Manager</p></img></div>                 
                                   
                  </div>
    
                </div>
              </div>

        </div>
        <div class="py-24 px-10">
          <h2 class="text-2xl font-semibold mb-1 text-start">
            Enter you personal info here
            </h2>
            <p class='my-8 font-semibold text-left'>Please enter your details below. This info will be stored securely on Nillion Private Storage and can be shared easily with apps an websites you interact with on the web</p>
            <form id="activatePrivateStorageForm">
               <div class="mb-4">
                    <label class="label"><span class="my-2 label-text text-base-content">First Name</span></label>
                    <input id="firstnametf" name="firstname" type="text" class="w-full text-lg p-2 border-blue-400 border-2" />
                </div>       
                
                <div class="mb-4">
                  <label class="label"><span class="my-2 label-text text-base-content">Last Name</span></label>
                  <input id="lastnametf" name="lastname" type="text" class="w-full text-lg p-2 border-blue-400 border-2" />
                </div>
                       
              <div class="mb-4">
                <label class="label"><span class="my-2 label-text text-base-content">Email</span></label>
                <input id="emailtf" name="email" type="text" class="w-full text-lg p-2 border-blue-400 border-2" />
            </div>                
            <div class="mb-4">
              <label class="label"><span class="my-2 label-text text-base-content">Phone</span></label>
              <input id="phonetf" name="phone" type="text" class="w-full text-lg p-2 border-blue-400 border-2" />
              </div>
                  
            <div class="mb-4">
              <label class="label"><span class="my-2 label-text text-base-content">Address</span></label>
              <input id="addresstf" type="text" class="w-full text-lg p-2 border-blue-400 border-2" />
            </div>       
        <div class="mb-4">
          <label class="label"><span class="my-2 label-text text-base-content">City</span></label>
          <input id="citytf" type="text" class="w-full text-lg p-2 border-blue-400 border-2" />
      </div>       
      <div class="mb-4">
        <label class="label"><span class="my-2 label-text text-base-content">Country</span></label>
        <input id="countrytf" type="text" class="w-full text-lg p-2 border-blue-400 border-2" />
    </div>
                     
              <div class="my-4">
                <button id="activatePrivateStorageSubmitBtn" type="submit" class="btn mt-2 w-full btn-primary">Save in Private Storage</button>
                <div class='text-center mt-4'>Don't have an account yet? <a href="/register"><button class="  inline-block  hover:text-primary hover:underline hover:cursor-pointer transition duration-200">Register</button></a></div>
              </div>
              </form>
        </div>
      </div>
    </div>
  </div>
  </Layout>

<script src="/settings.js" is:inline>

</script>

